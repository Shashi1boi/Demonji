RewriteEngine On
RewriteBase /

# Redirect /stream/{server_id}/{stream_id}/master.m3u8 to stream.php
RewriteRule ^stream/([^/]+)/([^/]+)/master\.m3u8$ stream.php [L,NC]

# Ensure PHP files are accessible
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
